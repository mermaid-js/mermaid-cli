    "lint": "standard",
    "lint-fix": "standard --fix"
  },
  "dependencies": {
    "chalk": "^5.0.1",
    "commander": "^10.0.0",
    "puppeteer": "^19.0.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.6.0",
    "@mermaid-js/mermaid-zenuml": "^0.1.1",
    "@tsconfig/node14": "^14.1.0",
    "jest": "^29.0.1",
    "mermaid": "^10.0.0",
    "standard": "^17.0.0",
    "typescript": "^5.0.1-rc",
    "vite": "^4.0.3",
    "vite-plugin-singlefile": "^0.13.1",
    "vite-svg-loader": "^4.0.0",
    "yarn-upgrade-all": "^0.7.0"
  },
  "files": [
    "src/",
    "dist/",
    "dist-types/"
  ],
  "jest": {
    "moduleNameMapper": {
      "#(.*)": "<rootDir>/node_modules/$1"
    }
